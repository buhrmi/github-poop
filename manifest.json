{
    "author": "Stefan Buhrmester",
    "manifest_version": 2,
    "name": "GitHub Poop",
    "description": "Replaces the Star Button with a Poop Button",
    "version": "1.0.1",
    "browser_action": {
        "default_title": "GitHub Poop",
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        }
    },
    "permissions": [
        "tabs",
        "https://github.com/"
    ],
    "background": {
      "scripts": [ "scripts/bg.js" ], 
      "persistent": false
    },        
    "icons": {
        "128": "images/icon128.png"
        
    }
}
